{
  "name": "the-big-screen-club",
  "version": "1.0.0",
  "private": true,
  "description": "The Big Screen Club monorepo",
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "dev:frontend": "pnpm --filter big-screen-club-frontend dev",
    "dev:backend": "pnpm --filter big-screen-club-backend dev",
    "build": "pnpm -r build",
    "build:frontend": "pnpm --filter big-screen-club-frontend build",
    "build:backend": "pnpm --filter big-screen-club-backend build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "bash -c 'cd frontend && eslint --fix --max-warnings 0 $0' --",
      "prettier --write"
    ],
    "backend/**/*.{ts,js}": [
      "bash -c 'cd backend && eslint --fix --max-warnings 0 $0' --",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
