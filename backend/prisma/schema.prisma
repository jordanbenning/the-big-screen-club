// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String              @id @default(uuid())
  email               String              @unique
  password            String
  username            String              @unique
  profilePictureUrl   String?
  isVerified          Boolean             @default(false)
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  verificationTokens  VerificationToken[]
  clubMemberships     ClubMember[]
  createdClubs        Club[]              @relation("ClubCreator")
  sentInvitations     ClubInvitation[]    @relation("InvitationSender")
  receivedInvitations ClubInvitation[]    @relation("InvitationReceiver")
  notifications       Notification[]
  clubRotations       ClubRotation[]
  suggestedVotingRounds MovieVotingRound[]
  movieVotes          MovieVote[]
  movieRatings        MovieRating[]

  @@map("users")
}

model VerificationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("verification_tokens")
}

enum ClubRole {
  ADMIN
  MEMBER

  @@map("club_role")
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED

  @@map("invitation_status")
}

enum NotificationType {
  CLUB_INVITATION

  @@map("notification_type")
}

enum VotingRoundStatus {
  SUGGESTING
  VOTING
  REVEALED
  TIE_BREAKING
  COMPLETED

  @@map("voting_round_status")
}

enum SelectedMovieStatus {
  UPCOMING
  WATCHED

  @@map("selected_movie_status")
}

model Club {
  id                String              @id @default(uuid())
  name              String              @unique
  description       String?
  profilePictureUrl String?
  isPublic          Boolean             @default(false)
  createdById       String
  creator           User                @relation("ClubCreator", fields: [createdById], references: [id], onDelete: Cascade)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  members           ClubMember[]
  invitations       ClubInvitation[]
  settings          ClubSettings?
  rotation          ClubRotation[]
  votingRounds      MovieVotingRound[]
  selectedMovies    SelectedMovie[]

  @@map("clubs")
}

model ClubMember {
  id       String   @id @default(uuid())
  clubId   String
  club     Club     @relation(fields: [clubId], references: [id], onDelete: Cascade)
  userId   String
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role     ClubRole @default(MEMBER)
  joinedAt DateTime @default(now())

  @@unique([clubId, userId])
  @@map("club_members")
}

model ClubInvitation {
  id              String           @id @default(uuid())
  clubId          String
  club            Club             @relation(fields: [clubId], references: [id], onDelete: Cascade)
  invitedUserId   String
  invitedUser     User             @relation("InvitationReceiver", fields: [invitedUserId], references: [id], onDelete: Cascade)
  invitedByUserId String
  invitedBy       User             @relation("InvitationSender", fields: [invitedByUserId], references: [id], onDelete: Cascade)
  status          InvitationStatus @default(PENDING)
  createdAt       DateTime         @default(now())
  expiresAt       DateTime
  notifications   Notification[]

  @@map("club_invitations")
}

model Notification {
  id                String           @id @default(uuid())
  userId            String
  user              User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  type              NotificationType
  relatedId         String
  relatedInvitation ClubInvitation   @relation(fields: [relatedId], references: [id], onDelete: Cascade)
  isRead            Boolean          @default(false)
  createdAt         DateTime         @default(now())

  @@map("notifications")
}

model ClubSettings {
  id                     String @id @default(uuid())
  clubId                 String @unique
  club                   Club   @relation(fields: [clubId], references: [id], onDelete: Cascade)
  movieSuggestionsCount  Int    @default(4)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@map("club_settings")
}

model ClubRotation {
  id        String   @id @default(uuid())
  clubId    String
  club      Club     @relation(fields: [clubId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([clubId, order])
  @@unique([clubId, userId])
  @@map("club_rotation")
}

model MovieVotingRound {
  id                String             @id @default(uuid())
  clubId            String
  club              Club               @relation(fields: [clubId], references: [id], onDelete: Cascade)
  suggestedByUserId String
  suggestedBy       User               @relation(fields: [suggestedByUserId], references: [id], onDelete: Cascade)
  status            VotingRoundStatus  @default(SUGGESTING)
  revealedAt        DateTime?
  selectedMovieId   String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  suggestions       MovieSuggestion[]
  votes             MovieVote[]
  selectedMovie     SelectedMovie?

  @@map("movie_voting_rounds")
}

model MovieSuggestion {
  id             String           @id @default(uuid())
  votingRoundId  String
  votingRound    MovieVotingRound @relation(fields: [votingRoundId], references: [id], onDelete: Cascade)
  tmdbId         Int
  title          String
  posterPath     String?
  releaseYear    Int?
  overview       String?
  createdAt      DateTime         @default(now())
  selectedMovies SelectedMovie[]

  @@map("movie_suggestions")
}

model MovieVote {
  id            String           @id @default(uuid())
  votingRoundId String
  votingRound   MovieVotingRound @relation(fields: [votingRoundId], references: [id], onDelete: Cascade)
  userId        String
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  rankings      Json
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@unique([votingRoundId, userId])
  @@map("movie_votes")
}

model SelectedMovie {
  id                String               @id @default(uuid())
  clubId            String
  club              Club                 @relation(fields: [clubId], references: [id], onDelete: Cascade)
  votingRoundId     String               @unique
  votingRound       MovieVotingRound     @relation(fields: [votingRoundId], references: [id], onDelete: Cascade)
  movieSuggestionId String
  movieSuggestion   MovieSuggestion      @relation(fields: [movieSuggestionId], references: [id], onDelete: Cascade)
  watchByDate       DateTime
  watchedAt         DateTime?
  selectedAt        DateTime             @default(now())
  status            SelectedMovieStatus  @default(UPCOMING)
  ratings           MovieRating[]

  @@map("selected_movies")
}

model MovieRating {
  id              String        @id @default(uuid())
  selectedMovieId String
  selectedMovie   SelectedMovie @relation(fields: [selectedMovieId], references: [id], onDelete: Cascade)
  userId          String
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating          Float
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([selectedMovieId, userId])
  @@map("movie_ratings")
}

